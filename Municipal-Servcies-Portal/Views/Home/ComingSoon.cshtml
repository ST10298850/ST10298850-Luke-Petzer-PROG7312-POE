@{
    ViewData["Title"] = "Coming Soon";
}
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700&display=swap" rel="stylesheet">
<main class="comingsoon-container">
    <section class="comingsoon-card">
        <div class="comingsoon-icon-bg">
            <img src="~/images/icons/ic_coming_soon.svg" alt="Coming Soon Icon" width="48" height="48" />
        </div>
        <div class="comingsoon-title">Coming Soon</div>
        <div class="comingsoon-subtitle">This feature will be available soon.</div>
        <div class="comingsoon-desc">We're working hard to bring you this new service. Please check back later for updates.</div>
        <div class="comingsoon-actions">
            <a href="/" class="comingsoon-btn primary">
                <span class="comingsoon-btn-icon">
                    <img src="~/images/icons/ic_back_arrow.svg" alt="Back Icon" width="18" height="18" />
                </span>
                <span>Back to Main Menu</span>
            </a>
            <a href="/" class="comingsoon-btn">
                <span class="comingsoon-btn-icon">
                    <img src="~/images/icons/ic_home.svg" alt="Home Icon" width="18" height="18" />
                </span>
                <span>Go to Homepage</span>
            </a>
        </div>
    </section>
</main>
